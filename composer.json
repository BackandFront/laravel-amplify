{
    "name": "dubems/laravel-amplify",
    "description": "Amplify payments library for laravel",
    "type": "library",
    "authors": [
        {
            "name": "dubems",
            "email": "nriagudubem@yahoo.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^5.4.0|^7.0",
        "illuminate/support": "5.*",
        "guzzlehttp/guzzle": "5.*|6.*"
    },
    "require-dev": {
        "phpunit/phpunit" : "4.*",
        "mockery/mockery": ">=0.7.2"
    },
    "autoload": {
        "psr-4": {
            "Dubems\\Amplify\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dubems\\Amplify\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    }
}
